@page "/users"
@inject HttpClient HttpClient
@layout _Layout

@if (_users == null)
{
    <em style="margin: 30px; display: block;">Loading...</em>
}
else
{
    <table class="table table-sm table-bordered">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
        @if (!_users.Any())
        {
            <tr>
                <td colspan="4" class="text-center">No User Accounts</td>
            </tr>
        }
        else
        {
            foreach (IdentityUser user in _users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td class="text-center">
                        <form asp-page="List" method="post">
                            <input type="hidden" name="Id" value="@user.Id"/>
                            <NavLink href="@($"users/edit/{user.Id}")" class="btn btn-sm btn-warning">Edit</NavLink>
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
}
<NavLink class="btn btn-primary" href="users/create">Create</NavLink>

@code {

    private IEnumerable<IdentityUser> _users = null;

    protected override async Task OnInitializedAsync()
    {
        _users = await HttpClient.GetFromJsonAsync<IEnumerable<IdentityUser>>("api/users");
        StateHasChanged();
    }

}